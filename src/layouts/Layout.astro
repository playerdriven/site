---
import '@/styles/globals.css'
import Navbar from '@/components/Navbar.astro'

interface Props {
  title?: string
}

const { title = 'PlayerDriven - Community Game Rankings' } = Astro.props
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Community-driven game rankings and voting platform"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background antialiased">
    <Navbar />
    <main class="relative flex min-h-screen flex-col pt-16">
      <!-- Optional: Add a subtle gradient overlay -->
      <div
        class="absolute inset-0 -z-10 bg-gradient-to-br from-background via-background to-secondary/20"
      >
      </div>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
